<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
    <% include ../static/partials/navBar.ejs %>
        <div class="container-fluid">
           <% include ../static/partials/messages.ejs %>
                <form action="/user/signup" method="post">
                    <h2 class="margin-bottom-large">Sign Up</h2>
                    <div class="form-group">
                        <label for="email">Email: </label>
                        <input class="form-control" name="email" type="email" placeholder="Enter email">
                        <small class="text-muted">Must be a valid email</small>
                    </div>
                    <div class="form-group">
                        <label for="password">Password: </label>
                        <input class="form-control" name="password" type="password" placeholder="Enter password"> 
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password: </label>
                        <input class="form-control" name="confirmPassword" type="password" placeholder="Enter password"> 
                        <small class="text-muted">Passwords must match</small>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block">Sign Up</button>
                </form>
        </div>
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>